---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="CodeCat - Quienes Somos">
    <Navbar />

    <main class="min-h-screen">
        <!-- Hero Section -->
        <section class="min-h-screen flex items-center justify-center px-4 py-20">
            <div class="max-w-7xl mx-auto w-full">
                <div class="text-center mb-16">
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6" style="color: #e398b7;">
                        Quienes Somos
                    </h1>
                    <p class="text-xl md:text-2xl max-w-3xl mx-auto" style="color: rgba(227, 152, 183, 0.8);">
                        Un equipo apasionado por la tecnología y la innovación
                    </p>
                </div>
                
                <!-- Nuestro Equipo -->
                <div class="mt-20">
                    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12" style="color: #e398b7;">
                        Nuestro Equipo
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                        <!-- Henry Mendoza -->
                        <div class="rounded-2xl p-8 text-center transition-all duration-300 hover:transform hover:-translate-y-2" 
                             style="background-color: rgba(21, 15, 64, 0.4); border: 2px solid #e398b7;">
                            <div class="w-32 h-32 mx-auto mb-6 rounded-full flex items-center justify-center text-6xl font-bold" 
                                 style="background-color: rgba(227, 152, 183, 0.2); color: #e398b7;">
                                HM
                            </div>
                            <h3 class="text-2xl md:text-3xl font-bold mb-2" style="color: #e398b7;">Henry Mendoza</h3>
                            <p class="text-lg mb-4" style="color: rgba(227, 152, 183, 0.8);">Ingeniero en Sistemas</p>
                            <p class="text-base leading-relaxed" style="color: white;">
                                Experto en desarrollo de software y arquitectura de sistemas, con amplia experiencia en la creación de soluciones tecnológicas innovadoras y escalables.
                            </p>
                        </div>

                        <!-- Mariana Puerta -->
                        <div class="rounded-2xl p-8 text-center transition-all duration-300 hover:transform hover:-translate-y-2" 
                             style="background-color: rgba(21, 15, 64, 0.4); border: 2px solid #e398b7;">
                            <div class="w-32 h-32 mx-auto mb-6 rounded-full flex items-center justify-center text-6xl font-bold" 
                                 style="background-color: rgba(227, 152, 183, 0.2); color: #e398b7;">
                                MP
                            </div>
                            <h3 class="text-2xl md:text-3xl font-bold mb-2" style="color: #e398b7;">Mariana Puerta</h3>
                            <p class="text-lg mb-4" style="color: rgba(227, 152, 183, 0.8);">Científica de Datos</p>
                            <p class="text-base leading-relaxed" style="color: white;">
                                Especialista en análisis de datos y machine learning, transformando información compleja en insights accionables para impulsar el crecimiento de tu negocio.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
